package com.example.springboot;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

import org.springframework.stereotype.Component;

@Component("helloService")
public class HelloService {
	
	public String getName() {
		return "Autowired";
	}
	
	public Map<Integer, Map<Integer, String>> getQueries() throws FileNotFoundException {
		Map<Integer, Map<Integer, String>> queries = new HashMap<Integer, Map<Integer,String>>();
		
		Scanner scanner = new Scanner(new File("cast\\query.txt"));
		while(scanner.hasNext()) {
			String line = scanner.next();
			String[] lineParts = line.split(" ");
			String[] queryNums = lineParts[1].split("_");
			
			queries.putIfAbsent(Integer.valueOf(queryNums[0]), new HashMap<Integer, String>());
			queries.get(Integer.valueOf(queryNums[0])).put(Integer.valueOf(queryNums[1]), lineParts[2]);
		}
		scanner.close();
		return queries;
	}

}
